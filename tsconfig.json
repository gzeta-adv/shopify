{
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
}
