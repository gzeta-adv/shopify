{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#airtable": ["src/apis/airtable"],
      "#airtable/*": ["src/apis/airtable/*"],
      "#shopify": ["src/apis/shopify"],
      "#shopify/*": ["src/apis/shopify/*"],
    },
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
}
