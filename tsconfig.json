{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#airtable": ["src/clients/airtable"],
      "#shopify": ["src/clients/shopify"],
    },
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
}
